@model Usuario;
@{
    ViewBag.Title = "Vista usuario";
    ViewBag.Css = "show.css";
}

<div class="container-main">
    <div class="container-show">
        <div class="left">
            <div class="container-info">
                <h5>ID:</h5>
                <p>@Model.Id</p>
            </div>
            <div class="container-info">
                <h5>Nombre:</h5>
                <p>@Model.Nombre</p>
            </div>
            <div class="container-info">
                <h5>Apellido:</h5>
                <p>@Model.Apellido</p>
            </div>
            <div class="container-info">
                <h5>Direccion:</h5>
                <p>@Model.Direccion</p>
            </div>
        </div>
        <div class="right">
            <div class="container-info">
                <h5>Telefono:</h5>
                <p>@Model.Telefono</p>
            </div>
            <div class="container-info">
                <h5>Correo:</h5>
                <p>@Model.Correo</p>
            </div>
            <div class="container-info">
                <h5>Ultimo registro:</h5>
                <p>@Model.Ultimo_registro</p>
            </div>
        </div>
    </div>
    <a class="btn-return" asp-controller="Users" asp-action="Index">Volver a lista de usuarios</a>
</div>